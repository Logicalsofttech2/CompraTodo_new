<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".customer.UI.help.HelpFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/helpcenter" />

        <LinearLayout
    android:layout_margin="@dimen/_20sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Have A Query ?"
        android:gravity="center_horizontal" />

    <EditText
        android:windowSoftInputMode="stateAlwaysVisible"
        android:singleLine="false"
        android:isScrollContainer="true"
        android:focusable="true"
        android:id="@+id/et_phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/blackcorner"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Type your Phone no"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:maxLength="13"
        android:padding="@dimen/_10sdp" />

    <EditText
        android:windowSoftInputMode="stateAlwaysVisible"
        android:focusable="true"
        android:maxLines="10"
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/blackcorner"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Type Your Question Here"
        android:ems="10"
        android:lines="5"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:importantForAutofill="no"
        android:padding="@dimen/_10sdp" />



    <TextView
        android:layout_margin="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:id="@+id/iv_save"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/greenbackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"/>

   <!-- android:textSize="@dimen/_20sdp"-->


</LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
