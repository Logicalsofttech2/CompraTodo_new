<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.activity.NotificationActivity">


    <LinearLayout

        android:id="@+id/Linear_DataNotFound"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <pl.droidsonroids.gif.GifImageView
            android:layout_gravity="center"
            android:src="@drawable/notificationgif2"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp" />
        <TextView
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:text="No Notifcation Yet !"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />


        <TextView
            android:id="@+id/strtshopping"
            android:background="@drawable/greenbackground"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:text="Start Shoping"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />



    </LinearLayout>


</LinearLayout>
</layout>