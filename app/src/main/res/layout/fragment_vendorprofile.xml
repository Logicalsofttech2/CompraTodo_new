<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".vendor.ui.profile.VendorprofileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/profiledetails"
                android:weightSum="3"
                android:padding="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".6"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="@dimen/_2sdp"
                    android:id="@+id/civProfilePic"
                    android:src="@drawable/fassion"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_weight="1.6"
                    android:textSize="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <TextView
                    android:id="@+id/tvEdit"
                    android:background="@drawable/blackcorner"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight=".8"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view"/>

            </LinearLayout>
            <LinearLayout
                android:weightSum="1"
                android:background="@drawable/blackcorner"
                android:padding="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/lightkground"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="600"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"/>

                <TextView
                    android:drawableRight="@drawable/ic_nextss"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_order"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/lightkground"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textColor="@color/red"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        android:layout_height="44dp"
                        android:textAlignment="center"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:text="$5000"/>

                <TextView
                    android:drawableRight="@drawable/ic_nextss"
                    android:textAlignment="center"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_earning"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawableRight="@drawable/ic_newnext"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/completed_order"/>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/catlog"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawableRight="@drawable/ic_newnext"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/catlog"/>





            </LinearLayout>




            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawableRight="@drawable/ic_newnext"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_settings"/>





            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:id="@+id/llChangePassword"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawableRight="@drawable/ic_newnext"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"/>





            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/llLogOut"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawableRight="@drawable/ic_newnext"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"/>





            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
</layout>