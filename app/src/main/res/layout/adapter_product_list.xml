<?xml version="1.0" encoding="utf-8"?>
<layout >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:id="@+id/product"
        android:weightSum="2"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/productdetails"
                android:layout_margin="@dimen/_1sdp"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_160sdp"
                            android:src="@drawable/watches"
                            android:scaleType="fitCenter" />
                        <TextView
                            android:id="@+id/tvPercetage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5dp"
                            android:text="20%"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@android:color/white" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:text="Automatic Watch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                        <TextView
                            android:ellipsize="end"
                            android:lines="1"
                            android:id="@+id/tvDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="best prices in India. Check out price and features of Automatic Men's"/>


                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:id="@+id/tvMrpPrice"
                            android:layout_width="wrap_content"
                            android:text="$ 500 "
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="@dimen/_14sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvOfferPrice"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:text="$300 "
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>



    </LinearLayout>
</layout>

