<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="@dimen/_150sdp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/ivImage"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="@dimen/_140sdp"
                                android:src="@drawable/watches"
                                android:scaleType="fitCenter" />




                            <LinearLayout
                                android:layout_marginTop="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:layout_weight="0.7"
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:text="Automatic Watch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_16sdp"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                <TextView
                                    android:id="@+id/tvAbout"
                                    android:ellipsize="end"
                                    android:lines="1"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="best prices in India. Check out price and features of Automatic Men's"/>
                                <LinearLayout
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvOfferprice"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:text="$ 500 "
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvMrp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="$300 "
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_16sdp"
                                        android:layout_height="wrap_content"/>



                                </LinearLayout>


                                <LinearLayout
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">



                                    <androidx.appcompat.widget.SwitchCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:id="@+id/scBtnStock"/>

                                    <TextView
                                        android:id="@+id/tvInStock"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="right"
                                        android:layout_gravity="right"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/stock"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/tvEditProduct"
                                        android:textColor="@color/light_gray"
                                        android:gravity="right"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:background="@drawable/blackcorner"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/edit"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:drawableStart="@drawable/ic_edit"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold"
                                        android:drawableLeft="@drawable/ic_edit" />
                                </LinearLayout>
                            </LinearLayout>




                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlChangeBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cbDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </RelativeLayout>


